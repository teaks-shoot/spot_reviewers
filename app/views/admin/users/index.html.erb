<div class="container mx-auto">
  <div class="mt-3">
    <h1 class="text-center">全ユーザー一覧</h1>
    <div class="row justify-content-center">
      <div class="col-7 mt-3">
        <ul>
          <% @users.each do |user| %>
            <li class="pb-2">
              <%= link_to admin_user_path(user) do %>
                <span class="font-weight-bold"><%= user.name %></span>
              <% end %>
              - <%= user.email %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>