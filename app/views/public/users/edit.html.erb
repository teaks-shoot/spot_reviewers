<div class="container mx-auto">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>ユーザー情報編集フォーム</h1>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


    <%= form_with model: @user do |f| %>
    
      <div class="form-group">
        <h4>名前</h4>
        <%= f.text_field :name, class: 'form-control user_name' %>
      </div>

      <div class="form-group">
        <h4>プロフィール画像</h4>
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
      </div>
    
      <div class="form-group">
        <h4>紹介文</h4>
        <%= f.text_area :infomation, class: 'form-control user_infomation' %>
      </div>
    
      <%= f.submit 'ユーザー更新', class: "btn btn-sm btn-success" %>
    
    <% end %>

    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 mx-auto mt-3 pt-3 border-top border-secondary ">
      <%= link_to "退会する", unsubscribe_path(current_user), class: "btn btn-sm btn-danger" %>
    </div>
  </div>  
  
</div>