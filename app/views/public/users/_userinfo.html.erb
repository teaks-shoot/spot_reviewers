<table>
  <tbody>
      
    <tr>
      <td class="font-weight-bold">
        名前
      </td>
    </tr>
    <tr>
      <td>
        <%= user.name %>
      </td>
    </tr>
    
    <tr>
      <td class="font-weight-bold">    
        紹介文
      </td>
    </tr>
    <tr>
      <td>    
        <%= user.infomation %>
      </td>
    </tr>
    
  </tbody>
</table>

<div class="mt-3 font-weight-bold">
  レビュー数：<%= user.review_count %>
</div>


<div class="mt-4">
  <table>
    <thead>
      <tr>
        <th> 名所 </th>
        <th> レビュー </th>
        <th> 評価 </th>
        <th> タグ </th>
        <th></th>
      </tr>
    </thead>
    
    <% reviews.each do |review| %>
      <tbody>
        <tr>
          <td>
            <%= link_to review_path(review) do %>
              <%= review.title %>
            <% end %>
          </td>
            
          <td>
            <%= truncate(review.body, length: 30, omission: '...') %>
          </td>
          
          <td>
            <%= render "public/reviews/starrate", review: review %>
          </td>
          
          <td>
            <% review.tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </td>
        </tr>
        
        <tr>
          <td colspan="2">
            投稿日：<%= review.created_at.strftime('%Y/%m/%d %H：%M') %>
          </td>
          <td>
            <%= link_to "コメント数：#{review.review_comments.count}", review_path(review.id) %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>