<h1>ユーザー情報編集フォーム</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= form_with model: @user do |f| %>
    
    <div>
      <h4>名前</h4>
      <%= f.text_field :name %>
    </div>
    
    <div class="mt-4">
      <h4>プロフィール画像</h4>
      <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
    </div>
    
    <div class="mt-4">
      <h4>紹介文</h4>
      <%= f.text_area :infomation %>
    </div>
    
    <%= f.submit '更新' %>
    
  <% end %>
</div>